{
  "name": "build-frontend-assets",
  "version": "1.0.0",
  "private": true,
  "description": "Build process for frontend assets",
  "main": "index.js",
  "scripts": {
    "preinstall": "git config core.hooksPath .githooks",
    "mkdirs": "rm -rf \"assets/js\" | rm -rf \"assets/css\"; mkdir -p \"assets/js\" | mkdir -p \"assets/css\"",
    "browser-sync": "browser-sync start -f \"assets/js/*.js, assets/css/*.css, **/*.php, **/*.json, !node_modules/**\" --no-notify",
    "js": "globify --debug \"assets-src/js/*.js\" -t babelify -o assets/js",
    "js:watch": "npm run js -- --watch",
    "js:build": "npm run js; uglifyjs-folder \"assets/js\" -e --extension .js -o \"assets/js\" --compress --mangle",
    "scss": "node-sass \"assets-src/scss\" --output \"assets/css\" --quiet",
    "scss:watch": "npm run scss; npm run scss -- --watch --source-map \"assets/css\"",
    "scss:build": "npm run scss -- --output-style compressed; postcss assets/css/*.css --use autoprefixer --replace",
    "build": "npm run mkdirs; npm run js:build; npm run scss:build;",
    "watch": "npm run mkdirs; npm run js:watch | npm run scss:watch | npm run browser-sync",
    "upload": "npm run build; bash .upload/upload.sh $npm_package_config_upload_path"
  },
  "config": {
    "upload": {
      "path": "ssh-335846-rh@rassohilber.com:/kunden/335846_10999/webseiten/rassohilber/wp-updates/packages"
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "author": "Rasso Hilber",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "*",
    "babelify": "^8.0.0",
    "browser-sync": "^2.26.7",
    "globify": "^2.3.9",
    "modernizr": "^3.11.1",
    "node-sass": "^4.14.1",
    "postcss-cli": "^4.1.0",
    "uglifyjs-folder": "^1.5.4"
  },
  "dependencies": {
    "autosize": "^4.0.2",
    "feather-icons": "^4.28.0"
  }
}
