{
  "name": "build-frontend-assets",
  "version": "1.0.0",
  "author": "Rasso Hilber",
  "license": "ISC",
  "private": true,
  "description": "Build process for frontend assets",
  "main": "index.js",
  "scripts": {
    "preinstall": "git config core.hooksPath .githooks; echo 'added .githooks to git'",
    "mkdirs": "mkdir -p assets",
    "build:js": "esbuild assets-src/*.js --outdir=assets --sourcemap --target=es2017 --bundle --loader:.svg=file",
    "scss": "sass assets-src/scss:assets",
    "watch": "npm run mkdirs; pnpm build:js --watch | pnpm run scss --watch",
    "build:css": "postcss assets/*.css --replace",
    "build": "pnpm build:js && pnpm scss && pnpm build:css"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.6.0",
    "sass": "^1.97.2"
  },
  "dependencies": {
    "autosize": "^4.0.2",
    "caniuse-lite": "^1.0.30001578",
    "feather-icons": "^4.28.0"
  }
}
